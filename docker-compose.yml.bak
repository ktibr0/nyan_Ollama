version: '3.1'
services:
  mongodb:
    image: mongo:4.4.0
    container_name: mongodb
    environment:
      MONGO_INITDB_DATABASE: main
    volumes:
      - ./mongo:/data/db
    ports:
      - 27017:27017
    networks:
      - nyan-network
    restart: unless-stopped

  nyan-worker:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: nyan-worker
    depends_on:
      - mongodb
    env_file:
      - .env
    environment:
      - CRAWL_SCHEDULE=${CRAWL_SCHEDULE:-0 */6 * * *}
      - SEND_SCHEDULE=${SEND_SCHEDULE:-30 */6 * * *}
      - MONGO_HOST=mongodb
      - MONGO_PORT=27017
      - OPENAI_API_KEY=${OPENAI_API_KEY:-}
      - TZ=Europe/Moscow      
      - CUBLAS_WORKSPACE_CONFIG=:4096:8
    extra_hosts:
      - "localhost:127.0.0.1"
    volumes:
      - ./channels.json:/app/channels.json
      - ./configs:/app/configs
      - ./data:/app/data
      - ./crawler/fetch_times.json:/app/crawler/fetch_times.json
      - ./models:/app/models  # <--- ДОБАВИТЬ ЭТУ СТРОКУ      
      - ./hf_cache:/root/.cache/huggingface

    networks:
      - nyan-network
    restart: unless-stopped
    
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: all
              capabilities: [gpu]  
networks:
  nyan-network:
    driver: bridge